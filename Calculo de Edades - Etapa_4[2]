<script>
    function saltarLinea() {
        document.write("<br><br><br><hr><br><br>"); //cinco saltos de linea 
    }  
    function escribe(frase)
    {
        document.write("<big>"+frase+"</big>");
        saltarLinea(); //invocar funcion
    }

    let anho = 2025;//variable entero

    escribe("hola amigos"); //saludo
    // este c칩digo calcula las edades de Juan, Pedro y Carlos
    escribe("Juan tiene: " + (anho-2000) + " a침os"); //Concatenacion
    escribe("Pedro tiene: " + (anho-1995) + " a침os"); //Concatenacion

    anho = 2030;//modificacion de variable entero

    escribe("Carlos tiene: " + (anho-2005) + " a침os"); //Concatenacion
</script>
